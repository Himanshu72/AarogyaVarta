<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include('common/links'); %>
    <style>
      @media only screen and (max-width: 500px) {
        .mybutton {
          width: 100%;
        }
      }
    </style>

    <link href="/stylesheets/login_style.css" rel="stylesheet" />
  </head>

  <body>
    <%- include('common/navbar',{auth:data.auth}) %>
    <div class="container-fluid" style="padding: 5%">
      <div class="row" style="margin-top: 3%">
        <div class="col-md-5">
          <form method="post" action="/login">
            <div class="mainheading">
              <h1>Log In</h1>
            </div>

            <div class="form-outline mb-4">
              <input
                type="email"
                id="email"
                class="form-control"
                name="email"
                required
              />
              <label class="form-label" for="email">Username</label>
            </div>

            <div class="form-outline mb-4">
              <input
                type="password"
                id="password"
                class="form-control"
                name="password"
                required
              />
              <label class="form-label" for="password">Password</label>
            </div>

            <div class="row mb-4">
              <div class="col">
                <a href="/forgotPassword">Forgot password?</a>
              </div>
            </div>

            <button type="submit" class="btn-block mb-4 mybutton perbtn">
              Log In
            </button>

            <div class="text-center" ;>
              <p>
                Not a member?
                <a href="/signup" style="text-decoration: none">Sign Up</a>
              </p>
            </div>
          </form>
        </div>
        <div class="col-md-7">
          <img src="/images/login.svg" class="img-fluid" alt="..." />
        </div>
      </div>
    </div>
    <%- include('common/footer'); %>
  </body>
</html>
