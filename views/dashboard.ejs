                                <span class="badge rounded-pill bg-danger">Danger</span>
                            </div>

                            </p>
                            <p style="background-color: hsl(0, 0%, 94%);" data-mdb-toggle="collapse"
                                href="#collapseExample3">
                                <!-- Buttons trigger collapse -->
                                <strong role="button" aria-expanded="false" aria-controls="collapseExample3">
                                    Symptoms <i class="fas fa-chevron-down"></i>
                                </strong>
                            <div class="collapse mt-3" id="collapseExample3">

                                <span class="badge rounded-pill bg-warning">Danger</span>
                                <span class="badge rounded-pill bg-warning">Danger</span>
                                <span class="badge rounded-pill bg-warning">Danger</span>
                                <span class="badge rounded-pill bg-warning">Danger</span>
                            </div>

                            </p>


                            <p style="background-color: hsl(0, 0%, 94%);" data-mdb-toggle="collapse"
                            href="#collapseExample2">
                            <!-- Buttons trigger collapse -->
                            <strong role="button" aria-expanded="false" aria-controls="collapseExample2">
                                Follow-up Meetings <i class="fas fa-chevron-down"></i>
                            </strong>
                        <div class="collapse mt-3 text-center" id="collapseExample2" >
                           <ul style="list-style: none;  margin: 0; padding: 0px;">
                               <li style="background: rgb(240, 234, 234); padding:0.1% ; ">                            <div class="row" >
                                
                                <div class="col-6">
                                    <i class="far fa-calendar-alt text-success"></i>    30-May-2021
                                </div>

                              <div class="col-6" >
                                <i class="far fa-edit text-warning"></i> edit
                                </div>
                            </div>
                            <br />
                            <div class="row" >
                                <div class="col-6">
                                   1-2 pm:
                                </div>
                                <div class="col-6">
                                    <a href="#" class="btn btn-primary">Join Meet</a>
                                </div>
                              
                            </div>
                                 </li>
                                </ul>
                                </div>
                                <br />
                        
                        

                        </p>
                            <button type="button" onclick="btn(this)" data-sis="3" data-mdb-toggle="modal"
                            data-mdb-target="#exampleModal" class="btn btn-outline-primary"><i class="fas fa-plus"></i> Shedule New Meet</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create Meet</h5>
        <button
          type="button"
          class="btn-close"
          data-mdb-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <form action="/meet/1" id="mform" >
      <div class="modal-body">
        <div class="form-outline"  >
            <input type="text" name="link" placeholder="Enter Meet Link"  />
        </div> <br />
          <div class="form-outline"  >
            <input type="datetime-local" name="shedule"  />
            
          </div><br />
          <div class="form-outline">   
            <input type="number" name="duration"  placeholder="Enter Meet Duration" />
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">
          Close
        </button>
        <button  class="btn btn-primary"><i class="fas fa-plus"></i> Create</button>
      </div>
      </form>
    </div>
  </div>
</div>
        <%- include('common/footer'); %>
        <script>
        function btn(e){
            let sid=e.dataset.sis;
            document.querySelector("#mform").action="/meet/"+sid;


        }
        </script>
        
</body>

</html>
